{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "~components/*": ["src/components/*"],
      "~features/*": ["src/features/*"],
      "~hooks/*": ["src/hooks/*"],
      "~types/*": ["src/types/*"],
      "~constants/*": ["src/constants/*"],
      "~router/*": ["src/router/*"],
      "~api/*": ["src/api/*"],
      "~pages/*": ["src/pages/*"],
      "~layouts/*": ["src/layouts/*"],
      "~mocks/*": ["src/mocks/*"],
      "~fixtures/*": ["src/fixtures/*"],
      "~routes/*": ["src/routes/*"],
      "~utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"]
}
