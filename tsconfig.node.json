{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "~components/*": ["src/components/*"],
      "~features/*": ["src/features/*"],
      "~hooks/*": ["src/hooks/*"],
      "~types/*": ["src/types/*"],
      "~constants/*": ["src/constants/*"],
      "~router/*": ["src/router/*"],
      "~api/*": ["src/api/*"],
      "~pages/*": ["src/pages/*"],
      "~layouts/*": ["src/layouts/*"],
      "~utils/*": ["src/utils/*"]
    }
  },
  "include": ["vite.config.ts", "vitest.setup.ts", "eslint.config.ts"]
}
